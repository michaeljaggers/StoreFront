@model StoreFront.DATA.Product

@{
    ViewBag.Title = "Detail";
}

<section class="py-5" id="productDetail">
    <div class="container">
        <div class="row mb-5">
            <div class="col-lg-6">
                <!-- PRODUCT SLIDER-->
                <div class="row m-sm-0">
                    @*<div class="col-sm-2 p-sm-0 order-2 order-sm-1 mt-2 mt-sm-0">
                            <div class="owl-thumbs d-flex flex-row flex-sm-column" data-slider-id="1">
                                <div class="owl-thumb-item flex-fill mb-2 mr-2 mr-sm-0"><img class="w-100" src="~/Content/img/product-detail-1.jpg" alt="..."></div>
                                <div class="owl-thumb-item flex-fill mb-2 mr-2 mr-sm-0"><img class="w-100" src="~/Content/img/product-detail-2.jpg" alt="..."></div>
                                <div class="owl-thumb-item flex-fill mb-2 mr-2 mr-sm-0"><img class="w-100" src="~/Content/img/product-detail-3.jpg" alt="..."></div>
                                <div class="owl-thumb-item flex-fill mb-2"><img class="w-100" src="~/Content/img/product-detail-4.jpg" alt="..."></div>
                            </div>
                        </div>*@
                    <div class="col-sm-10 offset-1 order-1 order-sm-2">
                        <div class="owl-carousel product-slider" data-slider-id="1">
                            <a class="d-block" href="~/Content/imgstore/products/@Html.DisplayFor(model => model.Image)" data-lightbox="product" title="@Html.DisplayFor(model => model.Name)">
                                <img class="img-fluid" src="~/Content/imgstore/products/@Html.DisplayFor(model => model.Image)" alt="@Html.DisplayFor(model => model.Name)">
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- PRODUCT DETAILS-->
            <div class="col-lg-6">
                <h1>@Html.DisplayFor(model => model.Name)</h1>
                <h3 class="text-light">@Html.DisplayFor(model => model.Price)</h3>
                <div class="add-to-cart my-5">
                    @*<p>
                            <span class="small text-uppercase text-gray mr-4 no-select">Quantity</span>
                            @using (Html.BeginForm("AddToCart", "Products", new { productID = Model.ProductID }, FormMethod.Post))
                            {
                                @Html.HiddenFor(p => p.ProductID)
                                @Html.TextBox("Qty", 1, new { @class = "form-control border-0", style = "max-height: 35px; max-width: 55px; display: inline;" })
                                <input type="submit" name="qty" value="Add To Cart" class="btn btn-primary border-0" style="" />
                            }
                        </p>*@
                    @using (Html.BeginForm("AddToCart", "Products", new { productID = Model.ProductID }, FormMethod.Post))
                    {
                        <div class="row align-items-stretch mb-4">
                            <div class="col-sm-5 pr-sm-0">
                                <div class="border d-flex align-items-center bg-white justify-content-between py-1 px-3">
                                    <span class="small text-uppercase text-dark mr-4 no-select">Quantity</span>
                                    <div class="quantity">

                                        @Html.HiddenFor(p => p.ProductID)
                                        @Html.TextBox("Qty", 1, new { @class = "form-control border-0" })

                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-5 pl-sm-0">
                                <a class="btn btn-primary border-0" style="line-height: 2.26rem;" href="@Url.Action("Index", "ShoppingCart")">Add To Cart</a>
                            </div>
                        </div>
                    }
                </div>
                <ul class="list-unstyled small d-inline-block">
                    <li class="px-3 py-2 mb-1 gray-bg"><strong class="text-uppercase">SKU:</strong><span class="ml-2 text-white-50">1005468-00-@Html.DisplayFor(model => model.ProductID)</span></li>
                    <li class="px-3 py-2 mb-1 gray-bg text-muted"><strong class="text-uppercase text-white">Category:</strong><a class="reset-anchor ml-2 text-white-50" href="#">@Html.DisplayFor(model => model.Category.Name)</a></li>
                </ul>
            </div>
        </div>

        <!-- DETAILS TABS-->
        <ul class="nav nav-tabs border-0" id="myTab" role="tablist">
            <li class="nav-item"><a class="nav-link active" id="description-tab" data-toggle="tab" href="#description" role="tab" aria-controls="description" aria-selected="true">Description</a></li>
            <li class="nav-item"><a class="nav-link" id="reviews-tab" data-toggle="tab" href="#reviews" role="tab" aria-controls="reviews" aria-selected="false">Reviews</a></li>
        </ul>
        <div class="tab-content mb-5" id="myTabContent">
            <div class="tab-pane fade show active" id="description" role="tabpanel" aria-labelledby="description-tab">
                <div class="p-4 p-lg-5 bg-white">
                    <h6 class="text-uppercase">Product description </h6>
                    <p class="text-muted text-small mb-0">@Html.DisplayFor(model => model.Description)</p>
                </div>
            </div>
            <div class="tab-pane fade" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
                <div class="p-4 p-lg-5 bg-white">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="media mb-3">
                                <img class="rounded-circle" src="~/Content/img/customer-1.png" alt="" width="50">
                                <div class="media-body ml-3">
                                    <h6 class="mb-0 text-uppercase">Jason Doe</h6>
                                    <p class="small text-muted mb-0 text-uppercase">20 May 2020</p>
                                    <ul class="list-inline mb-1 text-xs">
                                        <li class="list-inline-item m-0"><i class="fas fa-star text-warning"></i></li>
                                        <li class="list-inline-item m-0"><i class="fas fa-star text-warning"></i></li>
                                        <li class="list-inline-item m-0"><i class="fas fa-star text-warning"></i></li>
                                        <li class="list-inline-item m-0"><i class="fas fa-star text-warning"></i></li>
                                        <li class="list-inline-item m-0"><i class="fas fa-star-half-alt text-warning"></i></li>
                                    </ul>
                                    <p class="text-small mb-0 text-muted">Seriously the best product I have never owned.  You need this in your life.</p>
                                </div>
                            </div>
                            <div class="media">
                                <img class="rounded-circle" src="~/Content/img/customer-2.png" alt="" width="50">
                                <div class="media-body ml-3">
                                    <h6 class="mb-0 text-uppercase">Jason Doe</h6>
                                    <p class="small text-muted mb-0 text-uppercase">20 May 2020</p>
                                    <ul class="list-inline mb-1 text-xs">
                                        <li class="list-inline-item m-0"><i class="fas fa-star text-warning"></i></li>
                                        <li class="list-inline-item m-0"><i class="fas fa-star text-warning"></i></li>
                                        <li class="list-inline-item m-0"><i class="fas fa-star text-warning"></i></li>
                                        <li class="list-inline-item m-0"><i class="fas fa-star text-warning"></i></li>
                                        <li class="list-inline-item m-0"><i class="fas fa-star-half-alt text-warning"></i></li>
                                    </ul>
                                    <p class="text-small mb-0 text-muted">How did I ever live without this!?  I run faster, jump higher, and sit on the couch longer.  What are you waiting for?  Shut up and take my money!</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- FEATURED PRODUCTS-->
        <h2 class="h5 text-uppercase mb-4">Featured Products</h2>
        <div class="row">

            @Html.Action("FeaturedProducts", "Products")
            
        </div>
    </div>
</section>

