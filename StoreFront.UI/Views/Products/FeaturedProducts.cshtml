    <div class="col-xl-3 col-lg-4 col-sm-6">
        <div class="product text-center">
            <div class="position-relative mb-3">
                <div class="badge text-white badge-"></div><a class="d-block" href="@Url.Action("Detail", "Home", new { @id = item.ProductID })"><img class="img-fluid w-100" src="~/Content/imgstore/products/@item.Image" alt="@item.Name"></a>
