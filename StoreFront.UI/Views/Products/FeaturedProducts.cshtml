                </div>
            </div>
            <h6> <a class="reset-anchor" href="@Url.Action("Detail", "Home", new { @id = item.ProductID })">@item.Name</a></h6>
            <p class="small text-muted">@Html.DisplayFor(modelItem => item.Price)</p>
        </div>
    </div>
