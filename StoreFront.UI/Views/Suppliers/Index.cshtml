@model IEnumerable<StoreFront.DATA.Supplier>

@{
    ViewBag.Title = "Product Suppliers";
}

<div class="container py-5">
    <h2>@ViewBag.Title</h2>

    <p>
        @Html.ActionLink("Create New Product Supplier", "Create")
    </p>
    <table class="table data-table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Company)
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Company)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "Suppliers", new { id = item.SupplierID })" title="Edit Info"><i class="fas fa-edit"></i></a> |
                        <a href="@Url.Action("Details", "Suppliers", new { id = item.SupplierID })" title="View Details"><i class="far fa-eye"></i></a> |
                        <a href="@Url.Action("Delete", "Suppliers", new { id = item.SupplierID })" title="Delete Item"><i class="far fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts {
    <script>
        // Applying jQuery DataTables plugin
        $(document).ready(function () {
            $(".data-table").DataTable();
        });
    </script>
}