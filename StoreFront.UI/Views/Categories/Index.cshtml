@model IEnumerable<StoreFront.DATA.Category>

@{
    ViewBag.Title = "Categories";
}

<div class="container py-5">
    <h2>@ViewBag.Title</h2>

    <p>
        @Html.ActionLink("Create New Category", "Create")
    </p>
    <table class="table data-table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    <img src="~/Content/imgstore/categories/t_@item.Image" alt="Category Image" title="@item.Name" style="max-width: 100px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Categories", new { id = item.CategoryID })" title="Edit"><i class="fas fa-edit"></i></a>
                    <a href="@Url.Action("Details", "Categories", new { id = item.CategoryID })" title="Details"><i class="far fa-eye"></i></a>
                    <a href="@Url.Action("Delete", "Categories", new { id = item.CategoryID })" title="Delete"><i class="far fa-trash-alt"></i></a>
                </td>
            </tr>
            }
        </tbody>

    </table>
</div>

@section scripts {
    <script>
        // Applying jQuery DataTables plugin
        $(document).ready(function () {
            $(".data-table").DataTable();
        });
    </script>
}
